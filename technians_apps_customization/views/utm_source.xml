<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="utm_source_view_tree_inherit" model="ir.ui.view">
        <field name="name">utm.source.view.tree</field>
        <field name="model">utm.source</field>
              <field name="inherit_id" ref="utm.utm_source_view_tree" />
        <field name="arch" type="xml">
         <xpath expr="//tree/field[@name='name']" position="after">
             <field name="lead_count"/>
             <field name="sale_order_count"/>
             <field name="invoice_count"/>
             <field name="contact"/>
             <field name="applicants"/>
         </xpath>
        </field>
        </record>
    </data>
</odoo>