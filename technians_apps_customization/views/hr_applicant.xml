    <!-- Default order of Applcants in list view -->
        <record id="crm_case_tree_view_job_inherit_applicant_asce" model="ir.ui.view">
            <field name="name">hr.applicant.tree.inherit</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.crm_case_tree_view_job"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="default_order">id desc</attribute>
                </xpath>
            </field>
        </record>

        <record id="inherit_applicant_tag_tree" model="ir.ui.view">
            <field name="name">hr.applicant.tag.tree.inherit</field>
            <field name="model">hr.applicant.category</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_category_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='color']" position="attributes">
                    <attribute name="widget">color_picker</attribute>
                </xpath>
            </field>
        </record>

        <record id="hr_applicant_form_inherit" model="ir.ui.view">
            <field name="name">hr.applicant.form.inherit</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_ids']" position="replace">
                    <field name="categ_ids" options="{'no_create': True, 'no_create_edit':True,'color_field':'color'}" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//field[@name='job_id']" position="after">
                    <field name="applicant_dob"/>
                    <field name="applicant_notice_period"/>
                    <field name="applicant_experience"/>
                    <field name="applicant_current_ctc"/>
                    <field name="applicant_current_city_id"/>
                    <field name="applicant_preferred_city_id"/>
                    <field name="applicant_current_employer_id"/>
                    <field name="applicant_resume" widget="url"/>
                </xpath>

                <xpath expr="//page" position="after">
                <page name="marketing_info" string="Marketing">
                    <group string="UTM Parameters">
                    <group>
                    <field name="medium_id"/>
                    <field name="campaign_id"/>
                    <field name="source_id"/>
                    <field name="applicant_ads_group"/>
                    <field name="applicant_utm_device"/>
                    <field name="applicant_utm_device_model"/>
                    <field name="applicant_google_gclid"/>
                    <field name="applicant_first_utm_campaign"/>
                    <field name="applicant_first_utm_medium"/>
                    <field name="applicant_first_utm_source"/>
                    <field name="applicant_first_utm_term"/>
                    <field name="applicant_first_utm_content"/>

                    <field name="applicant_organic_source_str"/>
                    <field name="applicant_traffic_source"/>
                    <field name="applicant_utm_matchtype"/>
                    <field name="applicant_first_traffic_source"/>
                    </group>
                    <group>
                    <field name="applicant_utm_term"/>
                    <field name="applicant_utm_placement"/>
                    <field name="applicant_utm_content"/>
                    <field name="applicant_utm_lp_url"/>
                    <field name="applicant_utm_organic_source_url"/>
                    <field name="applicant_first_referral_url"/>
                    <field name="applicant_last_webpage_visited"/>
                    <field name="applicant_last_referral_url"/>
                    <field name="applicant_interaction_source"/>
                    <field name="applicant_ga_client_id"/>
                    <field name="applicant_adposition"/>

                    <field name="applicant_handl_url"/>
                    <field name="applicant_handl_ref_domain"/>
                    <field name="applicant_handl_url_base"/>

                    </group>
                    </group>
                </page>
                </xpath>
            </field>
        </record>
          <record id="hr_applicant_search" model="ir.ui.view">
        <field name="name">hr.applicant.filters</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_search_bis"/>
        <field name="arch" type="xml">
            <search>
                <filter string="Created Today" name="created_today" domain="[('create_date', '>=',context_today().strftime('%Y-%m-%d'))]" />
                <filter string="Created Yesterday" name="created_yesterday" domain="[('create_date', '>=',(context_today() + datetime.timedelta(-1)).strftime('%Y-%m-%d'))]" />
<filter string="This Week" name="current_week"
    domain="[('create_date', '&lt;=', ((context_today()+relativedelta(weeks=0, weekday=6)).strftime('%Y-%m-%d 23:59:59'))), 
    ('create_date', '&gt;=', ((context_today()-relativedelta(weeks=0, weekday=0)).strftime('%Y-%m-%d 00:00:00')))]"/>
            
<filter string="Last Week" name="last_week"
    domain="[('create_date', '&lt;=', ((context_today()-relativedelta(weeks=1, weekday=6)).strftime('%Y-%m-%d 23:59:59'))), 
    ('create_date', '&gt;=', ((context_today()-relativedelta(weeks=1, weekday=0)).strftime('%Y-%m-%d 00:00:00')))]"/>
</search>
        </field>
    </record>




