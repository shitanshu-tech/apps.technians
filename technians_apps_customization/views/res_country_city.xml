<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="city_list_view" model="ir.ui.view" >
            <field name="name">city.list.view</field>
            <field name="model">res.country.city</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="city_state_id" />
                    <field name="city_country_id" />
                </tree>
            </field>
        </record>
        <record id="city_form_view" model="ir.ui.view" >
            <field name="name">city.form.view</field>
            <field name="model">res.country.city</field>
            <field name="arch" type="xml">
                <form><label for="name" class="oe_inline"/>
                        <field name="name" required="1"/>
                        <field name="city_state_id" />
                        <field name="city_country_id" />
                </form>
            </field>
        </record>
    </data> 
</odoo>