<odoo>
    <data>
        <record id="tech_service_project_smart_button" model="ir.ui.view">
            <field name="name">service.project.count</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="get_service_projects"
                        icon="fa-file">
                        <field string="Projects" name="projects_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>