<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!--  Offer Letter Mail Template  -->
        <record id="email_template_offer_letter_applicant" model="mail.template">
            <field name="name">Candidate: Offer Letter</field>
            <field name="model_id" ref="ts_hr_letters.model_hr_applicant"/>
            <field name="subject">Offer Letter - {{  object.partner_name }}, {{ object.job_id.name }}</field>
            <field name="email_to">{{ object.email_from }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="email_cc">{{ object.email_cc }}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="background-color: white; border-collapse: collapse; margin-left: 20px;">
                    <tr>
                        <td valign="top" style="padding: 0px 10px;">
                            <div style="font-size: 15px; margin: 0px; padding: 0px;">
                                <br/>
                                Dear <span style="font-size: 15px; font-weight: bold;"><t t-out="object.partner_name or ''">Applicant Name</t></span>,
                                <br/><br/>
                                We are delighted to extend our official offer for the position of  <span style="font-size: 15px; font-weight: bold;"><t t-out="object.job_id.name or ''"/></span>, in <span style="font-size: 15px; font-weight: bold;"><t t-out="object.company_id.name or ''"> </t>,<br/></span>
                                <br/>
                                After a thorough evaluation of your skills and qualifications, we are confident in your ability to contribute significantly to our team.<br/>
                                <br/>
                                Please find attached your formal offer letter, outlining the package with joining date of your employment.
                                <br/>
                                The designated workplace is in <span style="font-size: 15px; font-weight: bold;"><t t-out="object.job_id.address_id.city or ''"/></span> and your standard working hours will be from 10 a.m. to 7 p.m.
                                <br/>
                                <br/>
                                We kindly request you to review the document thoroughly. If you have any questions or require clarification on any aspect, feel free to contact us at<![CDATA[ ]]><span style="font-size: 15px; font-weight: bold;"><a t-att-href="'mailto:'+user.login" t-esc="user.login"/></span>
                                <br/><br/>
                                We look forward to your positive response and hope for a fruitful and successful association. Thank you for choosing to be a part of <span style="font-size: 15px; font-weight: bold;"><t t-out="object.company_id.name"/></span>.
                                <br/><br/>
                                <h5 class="mb-1"><b t-esc="user.signature"/></h5>
                            </div>
                        </td>
                    </tr>
                </table>
            </field>
            <field name="lang">{{ object.partner_id.lang or '' }}</field>
            <field name="auto_delete" eval="False"/>
        </record>

        <!--  ERP Creation Mail Template  -->
