<?xml version ="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_project_task_time_inherit_form_view" model="ir.ui.view">
        <field name="name">project.task.time.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='recurrence']//field[@name='sun']" position="after">
                    <field name="deadline_days_count" string="No. of days to set deadline"/>
            </xpath>
            </field>
    </record>
</odoo>