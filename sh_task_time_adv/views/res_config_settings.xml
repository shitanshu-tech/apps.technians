<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_allow_multi_user_res_config_settings_form" model="ir.ui.view">
        <field name="name">sh.allow.multi.user.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='project']" position="inside">
                <h2>Allow Multiple User</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_allow_multi_user" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_allow_multi_user" />
                            <div class="text-muted">
                                Allow Multi User To Start Task
                            </div>
                        </div>
                    </div>                   
                </div>
            </xpath>
            <xpath expr="//div[@data-key='project']" position="inside">
    <h2>Task Timer</h2>
    <div class="row mt16 o_settings_container">
        <div class="o_setting_box col-12 col-lg-6 ">
            <label class="o_form_label mr8" for="timer_end_duration">Automatic Task Timer End Time</label>
            <field name="timer_end_duration"/>
            <div class="text-muted">
                Set Time for Automatic Ending of Task
            </div>
        </div>
    </div>
</xpath>
        </field>
    </record>
</odoo>
